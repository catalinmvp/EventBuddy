<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleEvent">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="117dp"
            android:layout_height="71dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:scaleX="2"
            android:scaleY="2"
            android:text="Event Buddy"
            android:translationX="200dp"
            android:translationY="30dp" />

    </com.google.android.material.navigation.NavigationView>


    <ImageView
        android:id="@+id/Backimg"
        android:layout_width="wrap_content"
        android:layout_height="325dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:alpha="0.4"
        android:background="#343030"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274"
        app:srcCompat="@drawable/nostalgia" />

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="603dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardBackgroundColor="#343030"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/EventLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:text="Link"
                android:translationY="510dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="111dp"
                android:layout_marginRight="111dp"

                android:alpha="1"
                app:cardBackgroundColor="#3C3C3C"
                app:cardCornerRadius="20dp">

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/EventTitle"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:alpha="1"
                android:gravity="center"
                android:lineSpacingExtra="12sp"
                android:paddingTop="15dp"
                android:textColor="#E5E5E5"
                android:textSize="20sp"
                android:translationY="-20dp" />

            <TextView
                android:id="@+id/EventLocation"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:alpha="1"
                android:gravity="center"
                android:lineSpacingExtra="12sp"
                android:paddingTop="15dp"
                android:textColor="#E5E5E5"
                android:textSize="20sp"
                android:translationY="-20dp" />

            <TextView
                android:id="@+id/EventDate"
                android:layout_width="106dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:textColor="#E5E5E5"
                android:textSize="20sp"
                android:translationX="130dp" />
        </LinearLayout>


    </RelativeLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:translationX="310dp"
            app:srcCompat="@drawable/git" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:translationX="230dp"
            app:srcCompat="@drawable/fb"
            tools:srcCompat="@drawable/fb" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:translationX="150dp"
            app:srcCompat="@drawable/instagram"
            tools:srcCompat="@drawable/instagram" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/ic_menu_info_details"
            tools:srcCompat="@android:drawable/ic_menu_info_details" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigationView" />

    <ImageView
        android:id="@+id/GameImg"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:translationY="-50dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner"
        app:srcCompat="@drawable/nostalgia" />
</androidx.constraintlayout.widget.ConstraintLayout>